<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheet/star.css">
    <div class="row">
        <div class="col-md-6 ">
            <div id="carouselControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% campgrounds.images.forEach((img , i)=> { %>
                        <div class="carousel-item <%= i===0 ? 'active' : '' %>">
                            <img class="d-block w-100" src="<%= img.url %>" alt="">
                        </div>
                        <% }) %>
                </div>
                <% if(campgrounds.images.length>1){ %>
                    <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <% } %>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campgrounds.title %>
                    </h5>
                    <p class="card-text">
                        <%= campgrounds.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campgrounds.location %>
                    </li>
                    <li class="list-group-item">$<%= campgrounds.price %>/Night</li>
                    <li class="list-group-item text-muted">Submitted by <%= campgrounds.author.username %>
                    </li>
                </ul>
                <div class="card-body">
                    <% if(currentUser && campgrounds.author.equals(currentUser._id)|| currentUser.admin){ %>
                        <a href="/campgrounds/<%= campgrounds._id %>/edit" class="card-link btn btn-info">Edit</a>
                        <form class=" card-link d-inline" action="/campgrounds/<%= campgrounds._id %>?_method=DELETE "
                            method="post">
                            <button class="btn btn-danger">DELETE</button>
                        </form>
                        <% } %>
                            <a href="/campgrounds" class="card-link d-inline btn btn-primary">All
                                Campgrounds</a>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div id='map'></div>
            <% if(currentUser){ %>
                <h2>Hey Leave a Review</h2>
                <form action="/campgrounds/<%= campgrounds._id %>/reviews " method="post" class="mb-3 needs-validation"
                    novalidate>
                    <div class="mb-3">
                        <fieldset class="starability-basic">
                            <!-- <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                            aria-label="No rating." /> -->
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" checked />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <label for="review" class="form-label">Review</label>
                        <textarea name="review[body]" id="review" cols="30" rows="3" class="form-control"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide Review.
                        </div>
                    </div>
                    <button class="btn btn-success">Add review</button>
                </form>
                <% } %>
                    <% for(let review of campgrounds.reviews){ %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= review.author.username %>
                                </h5>
                                <p class="starability-result" data-rating="<%= review.rating %>">
                                    Rated: <%= review.rating %> stars
                                </p>
                                <p class="card-text">
                                    Review:<%= review.body %>
                                </p>
                                <p>
                                    <% if(currentUser && review.author.equals(currentUser._id)|| currentUser.admin){ %>
                                        <form
                                            action="/campgrounds/<%= campgrounds._id %>/reviews/<%= review._id %>?_method=DELETE  "
                                            method="post">
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                        <% } %>
                            </div>
                        </div>
                        <% } %>
        </div>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campground =<%- JSON.stringify(campgrounds) %>
    </script>
    <script src="/js/showMapBox.js"></script>